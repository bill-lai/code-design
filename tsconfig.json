{
  "compilerOptions": {
    "outDir": "es",
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "code-design": ["components/index.ts"]
    }
  },
  "include": [
    "components/**/*.ts", "components/**/*.d.ts", "components/**/*.tsx", "components/**/*.vue", 
    "site/**/*.ts", "site/**/*.d.ts", "site/**/*.tsx", "site/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
